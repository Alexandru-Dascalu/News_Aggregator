<?xml version="1.0" encoding="utf-8"?>

<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout_news_stream_names"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorBackground">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/news_stream_names_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorBackground">

        <TextView
            android:id="@+id/customise_streams_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="15"
            android:text="@string/customise_streams_title"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/add_stream_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_baseline_add" />

        <ImageButton
            android:id="@+id/remove_stream_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_remove"
            android:background="?android:attr/selectableItemBackground"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <view class="androidx.recyclerview.widget.RecyclerView"
        android:id="@+id/news_stream_names_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical" />

</androidx.appcompat.widget.LinearLayoutCompat>